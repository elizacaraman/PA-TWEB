@using System.Web.Optimization
@model BookMall.Web.Models.UserSignup

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5">

                    <h3 class="mb-5 text-center">Sign up</h3>


                    @Html.ValidationSummary(true)
                    @using (Html.BeginForm("Index", "Signup", FormMethod.Post, new { @id = "SignupForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Username, new
                       {
                           placeholder = "Joe Doe",
                           title = "Please enter you username",
                           value = "",
                           name = "username",
                           id = "username",
                           @class = "form-control"
                       })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new
                       {
                           placeholder = "example@gmail.com",
                           title = "Please enter you email",
                           value = "",
                           name = "email",
                           id = "email",
                           @class = "form-control"
                       })
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="Password1">Password</label>
                            @Html.TextBoxFor(m => m.Password1, new
                       {
                           @class = "form-control",
                           type = "password",
                           title = "Please enter your password",
                           placeholder = "******",
                           value = "",
                           name = "password1",
                           id = "password1"
                       })
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="Password2">Repeat Password</label>
                            @Html.TextBoxFor(m => m.Password2, new
                       {
                           @class = "form-control",
                           type = "password",
                           title = "Please repeat your password",
                           placeholder = "******",
                           value = "",
                           name = "password2",
                           id = "password2"
                       })
                        </div>

                        <br />
                        <button class="btn btn-primary btn-lg btn-block" type="submit" style="width:100%">Signup</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<p class="text-center"><a href="/login">Log In</a> </p>





@section Scripts {
    @Scripts.Render("~/bundles/validation/js")

    <script type="text/javascript">
        $(function () {

            $("#SignupForm").validate({
                rules: {
                    Username: {
                        required: true
                    },
                    Password: {
                        required: true
                    }
                },
                submitHandler: function (form) {
                    form.submit();
                },
                errorPlacement: function (error, element) {
                    $(element)
                        .closest("form")
                        .find("label[for='" + element.attr("id") + "']")
                        .append(error);
                },
                errorElement: "span"
            });
        });


    </script>
}
